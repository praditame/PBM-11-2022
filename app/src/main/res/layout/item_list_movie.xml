<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/mv_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:scaleType="fitXY"
        android:contentDescription="@string/poster" />

    <TextView
        android:id="@+id/mv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/mv_poster"
        android:text="@string/title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mv_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/mv_poster"
        android:layout_below="@id/mv_name"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:text="@string/released_date" />

    <TextView
        android:id="@+id/mv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mv_release"
        android:layout_marginStart="26dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/mv_poster"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/desc" />
</RelativeLayout>
